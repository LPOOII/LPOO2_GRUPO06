<Window x:Class="Vistas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="500" Width="800" Foreground="White"
        WindowStyle="SingleBorderWindow">
    <Window.Background>
        <ImageBrush ImageSource="src/bg.jpg"/>
    </Window.Background>
    <Grid>
        <DockPanel>
            <Menu DockPanel.Dock="Top" Width="Auto" Background="#8D8D8080" Foreground="White" FontWeight="DemiBold">
                <MenuItem Header="_Articulos y stock">
                    <MenuItem Header="Panel de articulos" Foreground="Black"/>
                    <MenuItem Header="Panel de categoria" Foreground="Black"/>
                    <MenuItem Header="_Familias" Foreground="Black"/>
                    <MenuItem Header="_Unidades de medida" Foreground="Black"/>
                </MenuItem>
                <MenuItem Header="_Ventas">
                    <MenuItem Header="Panel de clientes" Foreground="Black"/>
                </MenuItem>
                <MenuItem Header="Cerrar" Click="MenuItem_Click" />
            </Menu>
            <StackPanel></StackPanel>
        </DockPanel>
    </Grid>
</Window>
