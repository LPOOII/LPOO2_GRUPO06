<Window x:Class="Vistas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Inicio" Height="301" Width="564"
        ResizeMode="NoResize">
        <Window.Background>
            <ImageBrush ImageSource="src/bg.jpg"/>
        </Window.Background>
    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Height="260" Width="525">
