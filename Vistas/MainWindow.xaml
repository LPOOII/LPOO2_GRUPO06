        <PasswordBox Height="23" HorizontalAlignment="Left" Margin="143,115,0,0" Name="txtPassword" VerticalAlignment="Top" Width="120" />
        <!--BOTONERA PASSWORD-->
        <Button Content="1" Height="40" HorizontalAlignment="Left" Margin="317,24,0,0" Name="button1" VerticalAlignment="Top" Width="40" Click="mostrar"/>
        <Button Content="2" Height="40" HorizontalAlignment="Left" Margin="390,24,0,0" Name="button2" VerticalAlignment="Top" Width="40" Click="mostrar"/>
        <Button Content="3" Height="40" HorizontalAlignment="Left" Margin="460,24,0,0" Name="button3" VerticalAlignment="Top" Width="40" Click="mostrar"/>
        <Button Content="4" Height="40" HorizontalAlignment="Left" Margin="317,83,0,0" Name="button4" VerticalAlignment="Top" Width="40" Click="mostrar"/>
        <Button Content="5" Height="40" HorizontalAlignment="Left" Margin="390,83,0,0" Name="button5" VerticalAlignment="Top" Width="40" Click="mostrar"/>
        <Button Content="6" Height="40" HorizontalAlignment="Left" Margin="460,83,0,0" Name="button6" VerticalAlignment="Top" Width="40" Click="mostrar"/>
        <Button Content="7" Height="40" HorizontalAlignment="Left" Margin="317,142,0,0" Name="button7" VerticalAlignment="Top" Width="40" Click="mostrar"/>
