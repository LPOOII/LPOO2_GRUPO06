<Window x:Class="Vistas.VentaMesas"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mesas" mc:Ignorable="d"
        xmlns:mesa="clr-namespace:Vistas.Ventas"
        xmlns:src="clr-namespace:ClasesBase;assembly=ClasesBase"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        d:DesignHeight="747" d:DesignWidth="430" SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">    
    <Window.Background>        
        <ImageBrush ImageSource="../bg.jpg"/>        
    </Window.Background>
    <Window.Resources>
        <src:ConversorDeEstados x:Key="ConvEstados"></src:ConversorDeEstados>
        <XmlDataProvider x:Key="tipo_estado" Source="EstadosMesa.xml" XPath="/estados" />
    </Window.Resources>
    <Grid Height="546" Width="430">
        <mesa:MesaControl Margin="24,14,44,130"></mesa:MesaControl>
        <Button Content="Salir"  Style="{StaticResource ResourceKey=btn_mesa}" Margin="310,419,0,0" Name="btnSalir" Click="salir"/>
        <ListBox ItemsSource="{Binding Source={StaticResource tipo_estado},XPath=tipo/@name}" 
                  Background="{Binding ElementName=cmbTipoEstado, Path=SelectedValue, 
            Converter={StaticResource ConvEstados}}" Height="116" HorizontalAlignment="Left" Margin="154,418,0,0" Name="cmbTipoEstado" VerticalAlignment="Top" Width="120" />
        <Label Content="Estados de Mesas" Height="28" HorizontalAlignment="Left" Margin="24,418,0,0" Name="label1" VerticalAlignment="Top" Width="124" FontFamily="Bookman Old Style" FontWeight="Bold" Foreground="#FFFFF5F5" />
    </Grid>
    
</Window>
