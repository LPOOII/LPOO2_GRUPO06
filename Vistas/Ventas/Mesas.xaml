        <Button Content="19" Height="50" HorizontalAlignment="Left" Margin="225,305,0,0" Name="btn19" VerticalAlignment="Top" Width="70" Click="mouseClickEvent"/>
        
        <Button Content="4" Height="50" HorizontalAlignment="Left" Margin="315,30,0,0" Name="btn4" VerticalAlignment="Top" Width="70"  Click="mouseClickEvent"/>
        
