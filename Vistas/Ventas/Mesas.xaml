        <Button Content="17" Height="50" HorizontalAlignment="Left" Margin="39,305,0,0" Name="btn17" VerticalAlignment="Top" Width="70"  Click="mouseClickEvent"/>
        
        <Button Content="2" Height="50" HorizontalAlignment="Left" Margin="128,30,0,0" Name="btn2" VerticalAlignment="Top" Width="70" Click="mouseClickEvent"/>
        
        <Button Content="6" Height="50" HorizontalAlignment="Left" Margin="128,102,0,0" Name="btn6" VerticalAlignment="Top" Width="70" Click="mouseClickEvent"/>
        
        <Button Content="10" Height="50" HorizontalAlignment="Left" Margin="128,169,0,0" Name="btn10" VerticalAlignment="Top" Width="70" Click="mouseClickEvent"/>
        
        <Button Content="14" Height="50" HorizontalAlignment="Left" Margin="128,240,0,0" Name="btn14" VerticalAlignment="Top" Width="70" Click="mouseClickEvent"/>
        
