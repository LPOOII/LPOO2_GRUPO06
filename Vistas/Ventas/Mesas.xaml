        <Label Content="" Height="35" HorizontalAlignment="Left" Margin="44,380,0,72" Name="lblLibre" VerticalAlignment="Center" Width="35" Background="#FF57A639" Foreground="White" />        
        <Label Content="" Height="35" HorizontalAlignment="Left" Margin="130,379,0,71" Name="lblOcupado" VerticalAlignment="Center" Width="35" Background="#FFFE0000" Foreground="White" />        
        <Label Content="Libre" Height="34" Margin="85,380,306,0" Name="label1" VerticalAlignment="Top" Foreground="White" />        
